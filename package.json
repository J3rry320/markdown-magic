  "author": "J3rry Sa7pa7hy",
  "dependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "bugs": {
